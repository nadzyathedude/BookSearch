<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/v_books_list_item_cover"
        android:layout_width="84dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/gray_light"

      />

    <TextView
        android:id="@+id/v_books_list_item_title"
        style="@style/NormalRoboto14GrayLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/v_books_list_item_cover"
        app:layout_constraintTop_toTopOf="@id/v_books_list_item_cover"
        tools:text="Дневник того-то о чем-то " />
    <TextView
        android:id="@+id/v_books_list_item_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/v_books_list_item_title"
        app:layout_constraintStart_toEndOf="@id/v_books_list_item_cover"
        tools:text="Сонин Николай Иванович"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/v_books_list_item_cover"
        android:src="@drawable/divider"
        app:layout_constraintStart_toEndOf="@id/v_books_list_item_cover"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"

       />
</androidx.constraintlayout.widget.ConstraintLayout>